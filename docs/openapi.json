{
  "openapi": "3.0.1",
  "info": {
    "title": "PhotoOrganizer API",
    "description": "PhotoOrganizer image organizer",
    "license": {
      "name": "MIT",
      "url": "https://github.com/KKDad/PhotoOrganizerAPI/LICENSE"
    },
    "version": "v0.0.1"
  },
  "externalDocs": {
    "description": "PhotoOrganizer Documentation",
    "url": "https://github.com/KKDad/PhotoOrganizerAPI/docs"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "List Accounts",
      "description": "List all accounts"
    }
  ],
  "paths": {
    "/api/v1/accountAto": {
      "put": {
        "tags": [
          "account-controller"
        ],
        "operationId": "saveAccount",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountAto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/AccountAto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users": {
      "get": {
        "tags": [
          "List Accounts"
        ],
        "operationId": "fetchAllAccounts",
        "responses": {
          "400": {
            "description": "Invalid status value"
          },
          "200": {
            "description": "successful operation",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AccountAto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/user/{id}": {
      "get": {
        "tags": [
          "account-controller"
        ],
        "operationId": "fetchAccount",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/AccountAto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/": {
      "get": {
        "tags": [
          "home-controller"
        ],
        "operationId": "getHome",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccountAto": {
        "required": [
          "email",
          "roles"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email address, used to log in",
            "example": "john@stapledon.local"
          },
          "firstName": {
            "type": "string",
            "description": "users firstname",
            "nullable": true,
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "description": "users surname",
            "nullable": true,
            "example": "Doe"
          },
          "roles": {
            "uniqueItems": true,
            "type": "array",
            "description": "Assigned Roles",
            "items": {
              "type": "string",
              "description": "Assigned Roles",
              "enum": [
                "USER",
                "ADMIN"
              ]
            }
          }
        }
      }
    }
  }
}